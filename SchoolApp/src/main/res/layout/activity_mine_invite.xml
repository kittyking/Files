<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.MineInviteActivity" 
    android:background="@drawable/title_common_background"
    android:orientation="vertical">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#20B7FC"
        android:gravity="center">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的邀请码"
            android:textColor="@drawable/white_background"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/white_background"
            android:text=""
            android:id="@+id/recommendTV"
            android:layout_marginTop="10dp"
            android:textSize="40sp"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        android:layout_marginTop="10dp">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="通过社交网络邀请"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"/>
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="方法一"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
            
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@drawable/title_common_background"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"></LinearLayout>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        android:layout_marginTop="10dp">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="通过二维码直接邀请"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"/>
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="方法二"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal" />
            
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@drawable/title_common_background"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"></LinearLayout>
    </LinearLayout>
    

</LinearLayout>
