
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_common_background"
    android:orientation="vertical"
    tools:context="com.school.schoolapp.activity.technical.TechnicalPublishActivity">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_common_background"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/user_menu_arrow_margin_right"
        android:paddingRight="@dimen/user_menu_arrow_margin_right"
        android:background="@drawable/white_background">
        <LinearLayout android:orientation="vertical"
            android:background="@drawable/title_common_background"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <RelativeLayout android:layout_width="match_parent"
	       		android:layout_height="wrap_content"
	       		android:background="@drawable/white_background"
	       		android:paddingTop="10dp"
	       		android:paddingBottom="10dp"
	       		android:onClick="categoryChoose">
	            <TextView android:text="技能分类"
	                android:textColor="@drawable/dark_gray_color"
	                android:textSize="16sp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="1dp"/>
	            <ImageView android:id="@+id/nextarrow"
	                android:src="@drawable/icon_arrow_next"
	                android:layout_alignParentRight="true"
	                android:layout_height="@dimen/user_menu_arrow_next_height"
	                android:layout_width="@dimen/user_menu_arrow_next_height"
	                android:layout_marginTop="7dp"/>
	            <TextView android:id="@+id/tecCategory"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_toLeftOf="@+id/nextarrow"
	                android:text="技能分类"
	                android:textSize="16sp"
	                android:layout_marginRight="10dp"/>
	        </RelativeLayout>
	        <RelativeLayout android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/white_background"
	            android:layout_marginTop="1dp"
	            android:paddingTop="10dp"
	       		android:paddingBottom="10dp">
	            <TextView android:id="@+id/titleTxt"
	                android:text="技能标题"
	                android:textColor="@drawable/dark_gray_color"
	                android:textSize="16sp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
	            <EditText android:id="@+id/titleEdit"
	                android:layout_height="wrap_content"
	                android:layout_width="match_parent"
	                android:layout_toRightOf="@+id/titleTxt"
	                android:hint="请输入技能标题20字以内"
	                android:background="@null"
	                android:gravity="right"
	                android:textSize="16sp"/>
	        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <EditText android:id="@+id/decribeEdit"
	        android:layout_height="100dp"
	        android:layout_width="match_parent"
	        android:layout_toRightOf="@+id/titleTxt"
	        android:hint="描述一下你的一技之长，让大家敢兴趣"
	        android:background="@null"
	        android:gravity="top"
	        android:paddingLeft="@dimen/user_menu_arrow_margin_right"
       		android:paddingRight="@dimen/user_menu_arrow_margin_right"
       		android:layout_marginTop="10dp"
       		android:textSize="16sp"/>
        <TextView android:id="@+id/number"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="0/500"
            android:textColor="@drawable/dark_gray_color"
            android:textSize="12sp"
            android:gravity="right"
       		android:paddingRight="@dimen/user_menu_arrow_margin_right"/>
    </LinearLayout>
    <GridView android:id="@+id/photoGV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:numColumns="9"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp" 
        android:background="@drawable/white_background"
        android:layout_marginTop="1dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/user_menu_arrow_margin_right"
        android:paddingRight="@dimen/user_menu_arrow_margin_right"
        android:background="@drawable/white_background"
        android:layout_marginTop="10dp">
        <LinearLayout android:orientation="vertical"
            android:background="@drawable/title_common_background"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	       		android:paddingBottom="10dp">
	            <TextView android:id="@+id/yuan"
	                android:text="元"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_marginTop="2dp"/>
	            <EditText android:id="@+id/price"
	                android:layout_toLeftOf="@+id/yuan"
	                android:gravity="right"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@+id/sale"
	                android:hint="请输入您的价格"
	                android:background="@null"
	                android:textSize="16sp"
	                android:layout_marginRight="10dp"/>
	            
	            <TextView android:id="@+id/sale"
	                android:text="价格"
	                android:textColor="@drawable/dark_gray_color"
	                android:textSize="16sp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignTop="@+id/price"
	                android:layout_alignBottom="@+id/price"/>
	        </RelativeLayout>
	        
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	       		android:paddingBottom="10dp"
                android:layout_marginTop="1dp">
	            <TextView android:id="@+id/pricetxtN"
	                android:text="活动价(选填)"
	                android:textColor="@drawable/dark_gray_color"
	                android:textSize="16sp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
	            <TextView android:id="@+id/yuanN"
	                android:text="元"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_marginTop="2dp"/>
	            <EditText android:id="@+id/priceN"
	                android:layout_toLeftOf="@+id/yuanN"
	                android:gravity="right"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@+id/pricetxtN"
	                android:hint="请输入活动价格"
	                android:textSize="16sp"
	                android:background="@null"
	                android:layout_marginRight="10dp"/>
	        </RelativeLayout>
	        
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	       		android:paddingBottom="10dp"
                android:layout_marginTop="1dp">
	            <TextView android:id="@+id/unittxt"
	                android:text="单位"
	                android:textColor="@drawable/dark_gray_color"
	                android:textSize="16sp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
	            <EditText android:id="@+id/unit"
	                android:gravity="right"
	                android:layout_alignParentRight="true"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@+id/unittxt"
	                android:hint="如：小时、个、次"
	                android:textSize="16sp"
	                android:background="@null"/>
	        </RelativeLayout>
	        
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	       		android:paddingBottom="10dp"
                android:layout_marginTop="1dp">

	            <RadioGroup android:id="@+id/wayRG"
	                android:layout_height="wrap_content"
	                android:layout_width="match_parent"
	                android:layout_toRightOf="@+id/wayTXT"
	                android:layout_alignParentRight="true"
	                android:gravity="right"
	                android:orientation="horizontal">
	                <RadioButton android:id="@+id/sm"
	                    android:text="上门"
	                    android:layout_height="wrap_content"
	                    android:layout_width="wrap_content"
	                    android:button="@null"
	                    android:checked="true"
	                    android:gravity="center"
	                    android:textSize="12sp"
	                    android:background="@drawable/selector_skill_way"
	                    android:textColor="@drawable/white_background"
	                    android:layout_marginRight="5dp"/>
	                
	                <RadioButton android:id="@+id/dd"
	                    android:text="到店"
	                    android:layout_height="wrap_content"
	                    android:layout_width="wrap_content"
	                    android:button="@null"
	                    android:textSize="12sp"
	                    android:gravity="center"
	                    android:background="@drawable/selector_skill_way"
	                    android:textColor="@drawable/white_background"
	                     android:layout_marginRight="5dp"/>
	                <RadioButton android:id="@+id/xs"
	                    android:text="线上"
	                    android:layout_height="wrap_content"
	                    android:layout_width="wrap_content"
	                    android:button="@null"
	                    android:textSize="12sp"
	                    android:gravity="center"
	                    android:background="@drawable/selector_skill_way"
	                    android:textColor="@drawable/white_background"
	                     android:layout_marginRight="5dp"/>
	                
	                <RadioButton android:id="@+id/yj"
	                    android:text="邮寄"
	                    android:layout_height="wrap_content"
	                    android:layout_width="wrap_content"
	                    android:button="@null"
	                    android:textSize="12sp"
	                    android:gravity="center"
	                    android:background="@drawable/selector_skill_way"
	                    android:textColor="@drawable/white_background"/>
	                
	            </RadioGroup>
	            

	            <TextView
	                android:id="@+id/wayTXT"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:text="服务方式"
	                android:textColor="@drawable/dark_gray_color"
	                android:textSize="16sp" 
	                android:gravity="center"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
	        <RelativeLayout android:id="@+id/skillArea"
	            android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	       		android:paddingBottom="10dp"
                android:layout_marginTop="1dp">
	            <TextView android:id="@+id/areatxt"
	                android:text="服务区域"
	                android:textColor="@drawable/dark_gray_color"
	                android:textSize="16sp"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
	            <EditText android:id="@+id/area"
	                android:gravity="right"
	                android:layout_alignParentRight="true"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_toRightOf="@+id/areatxt"
	                android:hint="如：滁州琅琊区"
	                android:background="@null"
	                android:textSize="16sp"/>
	             <ImageView android:id="@+id/nextarrowarea"
	                android:src="@drawable/icon_arrow_next"
	                android:layout_alignParentRight="true"
	                android:layout_height="@dimen/user_menu_arrow_next_height"
	                android:layout_width="@dimen/user_menu_arrow_next_height"
	                android:layout_marginTop="4dp"
	                android:visibility="gone"/>
	            <TextView android:id="@+id/adressTxt"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:text="请选择您的服务地址"
	                android:layout_toLeftOf="@+id/nextarrowarea"
	                android:layout_toRightOf="@+id/areatxt"
	                android:gravity="right"
	                android:textSize="16sp"
	                android:layout_marginRight="10dp"
	                android:visibility="gone"/>
	        </RelativeLayout>
            
	    </LinearLayout>
    </LinearLayout>
    
    <Button android:id="@+id/publish"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/background_submit_btn"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="立即发布"
        android:onClick="publishSkill"/>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView android:text="发布即表示你同意了"
            android:textColor="@drawable/dark_gray_color"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button android:id="@+id/guifan"
            android:textColor="@drawable/yellow_textcolor"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《发布规范》"
            android:background="@null"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>
