<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/floorNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/floorStatus"
        android:layout_alignTop="@+id/floorStatus"
        android:layout_marginLeft="@dimen/user_menu_image_margin_left"
        android:gravity="center"
        android:text="楼层" />

    <TextView android:id="@+id/floorStatus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="状态"
        android:gravity="center"
        android:background="@drawable/background_cart_blue"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"/>

</RelativeLayout>
