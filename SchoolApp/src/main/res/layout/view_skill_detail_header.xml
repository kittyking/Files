<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_common_background" >
    <android.support.v4.view.ViewPager android:id="@+id/viewpager"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:background="@drawable/white_background"/>
    <RelativeLayout android:id="@+id/info"
        android:layout_below="@+id/viewpager"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/white_background"
        android:layout_marginTop="5dp">
        <!-- <com.school.schoolapp.view.cornerimage.CircularImage android:id="@+id/usericon" -->
	    <ImageView android:id="@+id/usericon"
	        android:layout_height="50dp"
	        android:layout_width="50dp"
	        android:src="@drawable/icon_pay_haitongxue"
	        android:layout_marginTop="@dimen/user_menu_arrow_margin_right"
	        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"/>
	    <ImageView android:id="@+id/usersex"
	        android:layout_height="15dp"
	        android:layout_width="15dp"
	        android:src="@drawable/icon_technical_man"
	        android:layout_toRightOf="@+id/usericon"
	        android:layout_alignTop="@+id/usericon"
	        android:layout_marginLeft="10dp"/>
	    <ImageView android:id="@+id/location"
	        android:layout_height="15dp"
	        android:layout_width="15dp"
	        android:src="@drawable/icon_technical_realname"
	        android:layout_below="@+id/usersex"
	        android:layout_alignLeft="@+id/usersex"
	        android:layout_marginTop="10dp"/>
	    <TextView android:id="@+id/username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:text="用户名"
	        android:layout_toRightOf="@+id/usersex"
	        android:layout_alignTop="@+id/usersex"
	        android:layout_marginLeft="10dp"/>
	    <TextView android:id="@+id/userlocation"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="已实名认证"
	        android:textSize="12sp"
	        android:textColor="@drawable/dark_gray_color"
	        android:layout_alignBottom="@+id/location"
	        android:layout_alignLeft="@+id/username"/>
	    <TextView android:id="@+id/userevelution"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="评分：4.3"
	        android:gravity="center"
	        android:textSize="12sp"
	        android:textColor="@drawable/dark_gray_color"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/username"
	        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
	        android:drawableLeft="@drawable/icon_technical_stars"
	        android:drawablePadding="5dp"/>
	    <TextView android:id="@+id/line1"
	        android:layout_height="1dp"
	        android:layout_width="match_parent"
	        android:background="@drawable/title_common_background"
	        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"
	        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
	        android:layout_marginTop="10dp"
	        android:layout_below="@+id/usericon"/>
	    <TextView android:id="@+id/tectitle"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:layout_below="@+id/line1"
	        android:layout_alignLeft="@+id/line1"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="10dp"/>
	    <TextView android:id="@+id/tecdecribe"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textSize="12sp"
	        android:layout_below="@+id/tectitle"
	        android:layout_alignLeft="@+id/tectitle"
	        android:layout_marginTop="5dp"
	        android:paddingBottom="10dp"/>
	    <TextView android:id="@+id/tecmoney"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:text="￥0/小时"
	        android:textColor="@drawable/red_textcolor"
	        android:textStyle="bold"
	        android:layout_alignRight="@+id/line1"
	        android:layout_alignTop="@+id/tectitle"/>
    </RelativeLayout>
    
    <LinearLayout android:id="@+id/detail"
        android:layout_below="@+id/info"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/white_background"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
	    <TextView android:id="@+id/qiyue"
	        android:text="暂无契约"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:padding="10dp"
	        android:gravity="center"/>
	    <TextView android:id="@+id/pinglun"
	        android:text="暂无评论"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_weight="1"
	        android:padding="10dp"
	        android:gravity="center"/>
        
    </LinearLayout>

</RelativeLayout>
