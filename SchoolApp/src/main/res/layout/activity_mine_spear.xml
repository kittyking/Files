<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.seller.MineSpearActivity" 
    android:background="@drawable/title_common_background">

    <RelativeLayout android:id="@+id/statusRelative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="@drawable/white_background">
        <TextView android:id="@+id/statusBtn"
	        android:layout_height="44dp"
	        android:layout_width="wrap_content"
	        android:textSize="14sp"
	        android:text="订单状态"
	        android:gravity="center"
	        android:layout_centerInParent="true"
	        android:textColor="@drawable/actionbar_color"
	        android:background="@drawable/white_background"/>
	    
	    <ImageView android:layout_toRightOf="@+id/statusBtn"
	        android:layout_centerVertical="true"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:src="@drawable/icon_arrow_down"
	        android:layout_marginLeft="10dp"/>
	    <TextView android:layout_below="@+id/statusBtn"
	        android:layout_height="1dp"
	        android:layout_width="match_parent"
	        android:background="@drawable/title_common_background"/>
    </RelativeLayout>
    
    <ListView android:id="@+id/soldList"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/statusRelative"
        android:background="@drawable/white_background"
        android:layout_marginTop="10dp">
        
    </ListView>
    
    <LinearLayout android:id="@+id/statusLinear"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/statusRelative"
        android:background="@drawable/background_alpha_black"
        android:visibility="gone">
        <ListView android:id="@+id/statusList"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/white_background">
            
        </ListView>
    </LinearLayout>
    
</RelativeLayout>
