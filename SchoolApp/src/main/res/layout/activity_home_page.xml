<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.home.HomePageActivity" >
    
    <android.support.v4.view.ViewPager android:id="@+id/adViewPager"
        android:layout_height="150dp"
        android:layout_width="match_parent" 
        android:background="#d23ddf"/>
    <Button android:id="@+id/ceoButton"
        android:layout_height="64dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"/>
    
    <LinearLayout android:id="@+id/menuLinearLayout"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:padding="10dp"
        android:layout_below="@+id/adViewPager"
        android:orientation="horizontal"
        android:layout_above="@+id/ceoButton">
        <LinearLayout android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button android:id="@+id/classmateButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button android:id="@+id/momentButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>
        <LinearLayout android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button android:id="@+id/shopButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button android:id="@+id/supportButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button android:id="@+id/taoButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    


</RelativeLayout>
