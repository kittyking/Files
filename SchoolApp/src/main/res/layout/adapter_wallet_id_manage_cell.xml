<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:background="@drawable/title_common_background">
        
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/white_background"
    	android:paddingBottom="15dp" >
        <ImageView android:background="@drawable/actionbar_color"
            android:layout_height="44dp"
            android:layout_width="44dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/image"/>

        <TextView
            android:id="@+id/phoneTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/image"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/image"
            android:text="账号" />
        
        <TextView
            android:id="@+id/phoneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phoneTitleTV"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/phoneTitleTV"
            android:text="13888888888" />
        
        <TextView
            android:id="@+id/nameTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/image"
            android:text="姓名" />
        
        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/nameTitleTV"
            android:text="崔**" />
        <ImageButton android:background="@drawable/icon_wallet_idmanager_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/image"
            android:layout_marginRight="30dp"/>
        
    </RelativeLayout>
    

</LinearLayout>
