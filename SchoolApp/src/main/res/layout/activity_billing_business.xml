<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.billing.BillingBusinessActivity" 
    android:orientation="vertical">

    <RadioGroup android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:id="@+id/typeRG">
        <RadioButton android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="极速送达"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:background="@drawable/selector_goods_add_radiobtn"
            android:textColor="@drawable/selector_goods_add_textcolor"
            android:id="@+id/fastRB"/>
        <RadioButton android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="指定时间"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/selector_goods_add_radiobtn"
            android:textColor="@drawable/selector_goods_add_textcolor"
            android:id="@+id/slowRB"/>
        
    </RadioGroup>
    <LinearLayout android:background="@drawable/title_common_background"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:orientation="vertical">
        
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/white_background"
        >
	        <LinearLayout  
	            android:id="@+id/allLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal"
	            android:paddingTop="10dp"
        		android:paddingBottom="10dp" >  
	  
	            <TextView  
	                android:id="@+id/allTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="全部"   
	                android:textSize="12sp"
	                android:textColor="@drawable/red_textcolor"/>
            </LinearLayout>
            <LinearLayout  
	            android:id="@+id/payLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal" 
	            android:paddingTop="10dp"
        android:paddingBottom="10dp">  
	  
	            <TextView  
	                android:id="@+id/payTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="货到付款"  
	                android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout  
	            android:id="@+id/receiveLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal"
	            android:paddingTop="10dp"
        android:paddingBottom="10dp">  
	  
	            <TextView  
	                android:id="@+id/receiveTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="待接单"  
	                android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout  
	            android:id="@+id/postingLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal" 
	            android:paddingTop="10dp"
        android:paddingBottom="10dp" >  
	  
	            <TextView  
	                android:id="@+id/postingTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="待发货"  
	                android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout  
	            android:id="@+id/postedLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal" 
	            android:paddingTop="10dp"
        android:paddingBottom="10dp" >  
	  
	            <TextView  
	                android:id="@+id/postedTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="已发货"  
	                android:textSize="12sp"/>
            </LinearLayout>
    </LinearLayout>
    <ImageView  
        android:id="@+id/smoothIV"  
        android:layout_width="50dp"  
        android:layout_height="2dp"  
        android:contentDescription="tab"  
        android:background="@drawable/title_common_background" >  
    </ImageView>  
    <LinearLayout android:background="@drawable/title_common_background"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:orientation="vertical">
        
    </LinearLayout>
    <android.support.v4.view.ViewPager 
        android:id="@+id/goodsViewPager"
	    android:layout_height="fill_parent"
	    android:layout_width="fill_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>
