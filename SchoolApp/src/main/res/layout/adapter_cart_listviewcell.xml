<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/white_background"
    android:paddingTop="20dp"
    android:paddingLeft="20dp">
        
     <com.school.schoolapp.view.RoundRectImageView 
         android:id="@+id/goodsImg"
         android:layout_height="70dp"
         android:layout_width="70dp"/>
     <ImageView android:id="@+id/goodsImgBack"
         android:src="@drawable/icon_goods_img_background"
	     android:layout_height="70dp"
	     android:layout_width="70dp" />
            <TextView android:id="@+id/goodsName"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="康师傅红烧牛肉面"
                android:textSize="18sp"
                android:textColor="@drawable/black_background"
                android:singleLine="true"
                android:layout_toRightOf="@+id/goodsImg"
                android:layout_marginLeft="10dp"/>
            <TextView android:id="@+id/goodsTitle"
                 android:layout_height="10dp"
                android:layout_width="wrap_content"
                android:textColor="@drawable/red_textcolor"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
              	 android:layout_alignLeft="@+id/goodsName"
                android:layout_below="@+id/goodsName"
                />
                <TextView android:id="@+id/shopPrice"
                    android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:text="￥5.0"
	                android:textStyle="bold"
	                android:textSize="16sp"
                android:textColor="@drawable/red_textcolor"
                android:layout_alignLeft="@+id/goodsName"
                android:layout_alignBottom="@+id/add"
                android:layout_marginBottom="10dp"/>
                <TextView android:id="@+id/marketPrice"
                    android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:text="￥5.0"
                android:textColor="@drawable/dark_gray_color"
	                android:textSize="10sp"
	                android:layout_alignBottom="@+id/shopPrice"
                android:layout_toRightOf="@+id/shopPrice"/>
       
            <!-- <TextView android:text="59分29秒后结束"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@drawable/red_textcolor"/> -->
                <ImageButton android:id="@+id/cut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_goods_cut"
	                android:layout_alignTop="@+id/add"
	                android:layout_alignBottom="@+id/add"
	                android:layout_toLeftOf="@+id/number"/>
                <TextView android:id="@+id/number"
                    android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:text="0"
	                android:gravity="center"
	                android:textColor="@drawable/black_background"
	                android:textSize="20sp"
	                android:layout_alignTop="@+id/add"
	                android:layout_alignBottom="@+id/add"
	                android:layout_toLeftOf="@+id/add"/>
                <ImageButton android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_goods_add"
                    android:layout_below="@+id/goodsTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
        
    
    <TextView android:id="@+id/divider"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:background="@drawable/title_common_background"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/add"
        android:layout_marginTop="10dp"/>
    

</RelativeLayout>
