<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal" >
    <RelativeLayout android:id="@+id/good1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1">
        <ImageView android:id="@+id/goodsImg1"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/goodsImgBack"
            android:src="@drawable/icon_goods_img_background"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/goodsout1"
                android:src="@drawable/background_goods_out"
	            android:layout_height="70dp"
	            android:layout_width="70dp"
	            android:layout_marginTop="10dp"
	            android:visibility="gone"
	            android:layout_centerHorizontal="true"/>
        <TextView android:id="@+id/goodsName1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_below="@+id/goodsImg1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@drawable/black_background"/>
        <TextView android:id="@+id/goodsTitle1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@drawable/red_textcolor"
            android:layout_below="@+id/goodsName1"
            android:singleLine="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="5dp"/>
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:id="@+id/shopPrice1"
            android:textSize="16sp"
            android:textColor="@drawable/red_textcolor"
            android:layout_below="@+id/goodsTitle1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"/>
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="5dp"
            android:textColor="@drawable/dark_gray_color"
            android:id="@+id/marketPrice1"
            android:layout_toRightOf="@+id/shopPrice1"
            android:layout_alignBottom="@+id/shopPrice1"/>
        <!-- <TextView android:id="@+id/stock1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:alpha="1"
            android:gravity="center"
        	android:textSize="10sp"
        	android:layout_marginLeft="10dp"
            android:textColor="@drawable/dark_gray_color"
            android:layout_below="@+id/marketPrice1"
            android:layout_marginTop="5dp"/> -->
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shopPrice1">
                <TextView android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/numberTV1"
                android:alpha="0"
                android:textColor="@drawable/black_background"
                android:layout_centerInParent="true"/>
                <ImageButton android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_goods_cut"
                    android:id="@+id/cutBtn1"
                    android:visibility="invisible"
                    android:layout_toLeftOf="@+id/numberTV1"
                    android:layout_centerHorizontal="true"/>
                <ImageButton android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_goods_add"
                    android:background="@null"
                    android:id="@+id/addBtn1"
                    android:layout_toRightOf="@+id/numberTV1"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
    
        <TextView android:layout_height="190dp"
            android:layout_width="1dp"
            android:background="@drawable/title_common_background"
            android:layout_alignParentRight="true"/>
        <TextView android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@drawable/title_common_background"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    
    
    
