<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.seller.MineServiceMangerActivity"
    android:background="@drawable/title_common_background" >

    <RadioGroup android:id="@+id/typeRG"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@drawable/white_background"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/all"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="全部服务"
            android:gravity="center"
            android:checked="true"
            android:textColor="@drawable/selector_tab_textcolor"/>
        <RadioButton android:id="@+id/already"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="已上架"
            android:gravity="center"
            android:textColor="@drawable/selector_tab_textcolor"/>
        <RadioButton android:id="@+id/not"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="未上架"
            android:gravity="center"
            android:textColor="@drawable/selector_tab_textcolor"/>
    </RadioGroup>
    
    <ListView android:id="@+id/services"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/white_background"
        android:layout_below="@+id/typeRG"
        android:layout_marginTop="10dp">
        
    </ListView>
    
</RelativeLayout>
