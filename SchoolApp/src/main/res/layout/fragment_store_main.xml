<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.fragment.main.StoreMainFragment" >
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:background="@drawable/title_common_background" >
    <RelativeLayout android:layout_height="44dp"
        android:layout_width="match_parent">
        <Button android:id="@+id/location"
            android:background="@null"
            android:textSize="18sp"
            android:drawableLeft="@drawable/icon_location_black"
            android:drawablePadding="2dp"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"/>
    </RelativeLayout>
