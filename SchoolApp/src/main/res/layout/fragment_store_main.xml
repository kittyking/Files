    <com.school.schoolapp.view.refreshlist.RListView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/title_common_background"
        android:id="@+id/storeListView"
        android:divider="@null">
        
    </com.school.schoolapp.view.refreshlist.RListView>
    </LinearLayout>

