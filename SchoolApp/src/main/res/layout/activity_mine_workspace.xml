                android:textSize="12sp"
                android:text="待处理订单"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:paddingRight="30dp"
                android:layout_toLeftOf="@+id/exchangeImageView"/>
            
            <LinearLayout android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="11dp"
            android:background="@drawable/title_common_background"
            android:layout_below="@+id/jiaoyi"
            android:id="@+id/line1"></LinearLayout>

            <Button android:id="@+id/exchangeBtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@null"/>
</RelativeLayout>
<RelativeLayout 
    android:layout_width="match_parent"
