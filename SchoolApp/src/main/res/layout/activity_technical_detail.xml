<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.technical.TechnicalDetailActivity"
    android:background="@drawable/title_common_background" >

    <RelativeLayout android:id="@+id/collect"
        android:layout_height="44dp"
        android:layout_width="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@drawable/white_background"
        android:onClick="collectSkill">
        <TextView android:text="收藏"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"/>
        
    </RelativeLayout>
    <RelativeLayout android:id="@+id/message"
        android:layout_height="44dp"
        android:layout_width="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/collect"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:background="@drawable/white_background">
        <TextView android:text="聊天"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center"/>
        
    </RelativeLayout>
    <Button android:id="@+id/buy"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@drawable/actionbar_color"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/message"
        android:layout_marginLeft="1dp"
        android:gravity="center" 
        android:text="立即购买"
        android:textSize="13sp"
        android:onClick="buySkill"/>
    
    <ListView android:id="@+id/infoLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_world" 
        android:layout_above="@+id/collect"
        android:background="@drawable/white_background"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>
