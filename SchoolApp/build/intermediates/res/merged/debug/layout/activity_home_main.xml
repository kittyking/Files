<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.home.HomeMainActivity"
    android:background="@drawable/title_common_background" >
    <FrameLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/mainContent"
        android:layout_marginBottom="45dp">
        
    </FrameLayout>
    <RadioGroup android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_background"
        android:orientation="horizontal"
        android:id="@+id/tabRadioGroup">
        <RadioButton android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="首页"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_help"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="bottom"
            android:button="@null"
            
            android:textSize="10sp"
            android:textColor="@drawable/selector_tab_textcolor"
            android:layout_marginBottom="2dp"
            android:id="@+id/helpRadio"/>
        <RadioButton android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="零食盒子"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_store"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="bottom"
            android:button="@null"
            android:textSize="10sp"
            android:textColor="@drawable/selector_tab_textcolor"
            android:layout_marginBottom="2dp"
            android:id="@+id/storeRadio"
            android:checked="true"/>
        <RadioButton android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="达人圈"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_moment"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="bottom"
            android:button="@null"
            android:visibility="gone"
            android:textSize="10sp"
            android:textColor="@drawable/selector_tab_textcolor"
            android:layout_marginBottom="2dp"
            android:id="@+id/momentRadio"/>
        <RadioButton android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="消息"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_chat"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="bottom"
            android:button="@null"
            android:textSize="10sp"
            android:textColor="@drawable/selector_tab_textcolor"
            android:layout_marginBottom="2dp"
            android:id="@+id/chatRadio"/>
        <RadioButton android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:text="我的"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_tab_mine"
            android:gravity="center_horizontal|bottom"
            android:layout_gravity="bottom"
            android:button="@null"
            android:textSize="10sp"
            android:textColor="@drawable/selector_tab_textcolor"
            android:layout_marginBottom="2dp"
            android:id="@+id/mineRadio"/>
        
    </RadioGroup>
    <ImageView android:id="@+id/maincircle"
	        android:src="@drawable/background_animation_circle"
	        android:scaleType="fitXY"
	        android:layout_height="10dp"
	        android:layout_width="10dp"
	        android:layout_alignTop="@+id/tabRadioGroup"
	        android:visibility="gone"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="120dp"/>
    <RelativeLayout android:id="@+id/couponView"
         android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/background_alpha_black"
        android:visibility="invisible"
        android:onClick="dismissCoupon">
        <TextView android:id="@+id/coupontxt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="恭喜你获取2张优惠券"
            android:textColor="@drawable/actionbar_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"/>
        <ListView android:id="@+id/coupon"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/coupontxt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:dividerHeight="30dp"
            android:layout_marginTop="50dp" />
    </RelativeLayout>

</RelativeLayout>
