<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.fragment.main.MomentMainFragment"
    android:background="@drawable/white_background" >

    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
		    android:background="@drawable/actionbar_color"
		    android:id="@+id/bar">
            <LinearLayout android:layout_width="wrap_content"
		        android:layout_height="44dp"
		        android:orientation="horizontal"
		        android:layout_centerInParent="true"
		        android:id="@+id/title">
			        <LinearLayout  
			            android:id="@+id/notsellLinear"  
			            android:layout_width="match_parent"  
			            android:layout_height="match_parent"  
			            android:layout_weight="1"  
			            android:gravity="center"  
			            android:orientation="horizontal"  
			            android:padding="10dip" >  
			  
			            <TextView  
			                android:id="@+id/notsellTV"  
			                android:layout_width="wrap_content"  
			                android:layout_height="wrap_content"  
			                android:gravity="center"  
			                android:text="动态"  
			                android:textSize="15sp"/>
		            </LinearLayout>
		            <LinearLayout  
			            android:id="@+id/sellingLinear"  
			            android:layout_width="match_parent"  
			            android:layout_height="match_parent"  
			            android:layout_weight="1"   
			            android:gravity="center"  
			            android:orientation="horizontal"  
			            android:padding="10dip" >  
			  
			            <TextView  
			                android:id="@+id/sellingTV"  
			                android:layout_width="wrap_content"  
			                android:layout_height="wrap_content"  
			                android:gravity="center"  
			                android:text="圈子"  
			                android:textSize="15sp"/>
		            </LinearLayout>
		            <LinearLayout  
			            android:id="@+id/recommendLinear"  
			            android:layout_width="match_parent"  
			            android:layout_height="match_parent"  
			            android:layout_weight="1"   
			            android:gravity="center"  
			            android:orientation="horizontal"  
			            android:padding="10dip" >  
			  
			            <TextView  
			                android:id="@+id/recommendTV"  
			                android:layout_width="wrap_content"  
			                android:layout_height="wrap_content"  
			                android:gravity="center"  
			                android:text="发现"  
			                android:textSize="15sp"/>
		            </LinearLayout>
			    </LinearLayout>
			    
            <ImageView android:id="@+id/add"
                android:layout_height="20dp"
                android:layout_width="20dp"
                android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_tab_mine_unselected"
                android:layout_centerVertical="true"/>
		    </RelativeLayout>
		
        <android.support.v4.view.ViewPager android:id="@+id/momentVP"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@+id/bar"/>
            <!-- 
        <Button android:id="@+id/publish"
            android:layout_height="44dp"
            android:layout_width="44dp"
            android:background="@drawable/actionbar_color"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="发话题"
            android:textSize="12sp"
            android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
            android:layout_marginBottom="@dimen/user_menu_arrow_margin_right"/> -->
        <Button android:id="@+id/publish"
	        android:layout_height="50dp"
	        android:layout_width="50dp"
	        android:background="@drawable/fxq_bg"
	        android:text="发话题"
	        android:textSize="12sp"
	        android:padding="5dp"
	        android:gravity="center"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
	        android:layout_marginBottom="@dimen/user_menu_arrow_margin_right"
	        android:drawableTop="@drawable/icon_technical_write"/>
        
	</RelativeLayout>

</FrameLayout>
