<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.login.UserCityActivity" 
    android:background="@drawable/title_common_background"
    android:orientation="vertical">
    <Button android:id="@+id/curCity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@drawable/dark_gray_color"
        android:background="@drawable/white_background"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dip"
        android:textSize="20dip"/>
    <com.school.schoolapp.view.citylist.ContactListViewImpl
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:cacheColorHint="#00000000"
            android:divider="@drawable/line"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="#00000000"
            android:smoothScrollbar="true" />
</LinearLayout>
