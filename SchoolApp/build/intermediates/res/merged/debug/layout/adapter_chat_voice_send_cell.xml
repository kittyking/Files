<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="80dp" >
    <com.school.schoolapp.view.RoundRectImageView android:id="@+id/userIcon"
        android:src="@drawable/icon_pay_haitongxue"
        android:layout_height="@dimen/chat_usericon_size"
        android:layout_width="@dimen/chat_usericon_size"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/user_menu_arrow_margin_right"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"/>
    <Button android:id="@+id/chat"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/actionbar_color"
        android:layout_toLeftOf="@+id/userIcon"
        android:layout_alignTop="@+id/userIcon"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

</RelativeLayout>
