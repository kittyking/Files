<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.wallet.MineWalletCashActivity"
    android:orientation="vertical" >
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/actionbar_color"
        android:gravity="center">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额（元）"/>
        <TextView android:id="@+id/balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginTop="10dp"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_background">
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"/>
            <EditText android:id="@+id/money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入提现金额"
                android:background="@null"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"/>
        </LinearLayout>
       
        <LinearLayout android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="11dp"
            android:background="@drawable/title_common_background"></LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝账号"
                android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"/>
            <EditText android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入账号"
                android:background="@null"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="11dp"
            android:background="@drawable/title_common_background"></LinearLayout>
       
        
        
    </LinearLayout>
    <Button android:id="@+id/submit"
        android:background="@drawable/background_submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
            android:text="提交"/>
    <TextView android:text="提现时间为每月1-3，16-18日"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
         android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
        android:textColor="@drawable/dark_gray_color"
        android:visibility="gone"/>

</LinearLayout>
