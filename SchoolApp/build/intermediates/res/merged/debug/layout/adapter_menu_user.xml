<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
            <ImageView android:layout_height="@dimen/user_menu_icon_height"
                android:layout_width="@dimen/user_menu_icon_height"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:id="@+id/iconImageView"/>
            <TextView android:id="@+id/titleTextView"
                android:text="我的订单"
                android:layout_toRightOf="@+id/iconImageView"
                android:layout_height="@dimen/user_menu_title_height"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:gravity="center_vertical"/>
            <ImageView android:layout_height="@dimen/user_menu_arrow_next_height"
                android:layout_width="@dimen/user_menu_arrow_next_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
                android:layout_marginTop="18dp"
                android:src="@drawable/icon_arrow_next"
                android:scaleType="fitXY"
                android:id="@+id/arrowImageView"/>
            <LinearLayout android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"
            android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
            android:layout_marginTop="11dp"
            android:background="@drawable/title_common_background"
            android:layout_below="@+id/iconImageView"
            android:id="@+id/line"></LinearLayout>

            <Button android:id="@+id/gotoBtn"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@null"/>
</RelativeLayout>
