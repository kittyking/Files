<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.work.MineSuccessActivity" >
    <TextView android:text="服务热线：400-888-8888"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:id="@+id/phoneTextView"/>

    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/title_common_background"
        android:layout_above="@+id/phoneTextView">
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/white_background"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/icon_mine_apply01"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="认识我们"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/icon_mine_apply02"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="填写申请"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:src="@drawable/icon_mine_apply03_highlight"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请成功"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background"
            android:layout_marginTop="10dp">
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提交成功！"
                android:textColor="@drawable/actionbar_color"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginTop="40dp"/>
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请耐心等待审核结果，通过后将以站内信形式通知！"
                android:layout_marginTop="30dp"
                android:gravity="center"/>
            <ImageView android:src="@drawable/logo_x144"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"/>
        </LinearLayout>
        </LinearLayout>
        

</RelativeLayout>
