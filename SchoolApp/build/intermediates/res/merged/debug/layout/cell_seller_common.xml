<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background" >
    <TextView android:id="@+id/divider"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@drawable/title_common_background"/>
    <!-- com.school.schoolapp.view.cornerimage.CircularImage -->
    <com.school.schoolapp.view.cornerimage.CircularImage android:id="@+id/usericon"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_below="@+id/divider"
        android:src="@drawable/icon_pay_haitongxue"
        android:layout_marginTop="@dimen/user_menu_arrow_margin_right"
        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"/>
    <ImageView android:id="@+id/usersex"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_man"
        android:layout_toRightOf="@+id/usericon"
        android:layout_alignTop="@+id/usericon"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"/>
    <ImageView android:id="@+id/location"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_mine_location"
        android:layout_below="@+id/usersex"
        android:layout_alignLeft="@+id/usersex"
        android:layout_marginTop="10dp"/>
    <TextView android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/usersex"
        android:layout_alignTop="@+id/usericon"
        android:layout_marginLeft="10dp"/>
    <TextView android:id="@+id/userlocation"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="学校名称"
        android:textSize="12sp"
        android:textColor="@drawable/dark_gray_color"
        android:layout_alignTop="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_alignLeft="@+id/username"/>
    <TextView android:id="@+id/userevelution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="待选标"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@drawable/yellow_textcolor"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/username"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"/>
    
    <TextView android:id="@+id/tectitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="技能标题"
        android:textSize="18sp"
        android:layout_below="@+id/usericon"
        android:layout_alignLeft="@+id/usericon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView android:id="@+id/je"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="金额:"
        android:layout_alignLeft="@+id/tectitle"
        android:layout_below="@+id/tectitle"
        android:layout_marginTop="10dp"/>
    <TextView android:id="@+id/tecmoney"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="￥0.0"
        android:textColor="@drawable/red_textcolor"
        android:textStyle="bold"
        android:layout_below="@+id/tectitle"
        android:layout_toRightOf="@+id/je"
        android:layout_alignTop="@+id/je"
        android:layout_marginLeft="5dp"/>
    <TextView android:text="未托管"
        android:textColor="@drawable/white_background"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/icon_mine_tuoguanfangshi"
        android:layout_alignTop="@+id/tecmoney"
        android:layout_alignBottom="@+id/tecmoney"
        android:layout_toRightOf="@+id/tecmoney"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"/>
    <Button android:id="@+id/help"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="【快递帮帮忙】"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/tecmoney"
        android:layout_alignTop="@+id/tecmoney"
        android:textSize="13sp"
        android:paddingTop="0dp"
        android:textColor="@drawable/red_textcolor"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"/>
    
	<TextView android:id="@+id/divider2"
        android:layout_below="@+id/help"
        android:layout_height="12dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/title_common_background"/>

</RelativeLayout>
