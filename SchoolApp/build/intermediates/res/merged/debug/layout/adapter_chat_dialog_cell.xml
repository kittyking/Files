<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/white_background">
    <com.school.schoolapp.view.RoundRectImageView android:id="@+id/userIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_pay_haitongxue"
        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"
        android:layout_marginTop="15dp"/>
    <ImageView android:id="@+id/circle"
        android:src="@drawable/background_animation_circle"
        android:scaleType="fitXY"
        android:layout_height="10dp"
        android:layout_width="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/userIcon"
        android:visibility="gone"/>
    <TextView android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="用户名"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/userIcon"
        android:layout_alignTop="@+id/userIcon"
        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"/>
    <TextView android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-01-01"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/userIcon"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
        android:textColor="@drawable/dark_gray_color"/>
    <TextView android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userIcon"
        android:text="亲，你有一条订单哦，订单号是34534534534，请"
        android:textColor="@drawable/dark_gray_color"
        android:singleLine="true"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
        android:layout_alignLeft="@+id/name"
        android:layout_alignBottom="@+id/userIcon"/>
    <LinearLayout android:id="@+id/line"
        android:orientation="horizontal"
        android:layout_below="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/title_common_background"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"></LinearLayout>

</RelativeLayout>
