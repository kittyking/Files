<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.workspace.MineWorkspaceGoodsManagerActivity" 
    android:background="@drawable/title_common_background"
    android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/white_background">
	        <LinearLayout  
	            android:id="@+id/notsellLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal"  
	            android:padding="10dip" >  
	  
	            <TextView  
	                android:id="@+id/notsellTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="未上架"  
	                android:textColor="@drawable/red_textcolor" 
	                android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout  
	            android:id="@+id/sellingLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal"  
	            android:padding="10dip" >  
	  
	            <TextView  
	                android:id="@+id/sellingTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="已上架"  
	                android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout  
	            android:id="@+id/recommendLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal"  
	            android:padding="10dip" >  
	  
	            <TextView  
	                android:id="@+id/recommendTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="已推荐"  
	                android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout  
	            android:id="@+id/stickLinear"  
	            android:layout_width="match_parent"  
	            android:layout_height="wrap_content"  
	            android:layout_weight="1"  
	            android:background="@drawable/white_background"  
	            android:gravity="center"  
	            android:orientation="horizontal"  
	            android:padding="10dip" >  
	  
	            <TextView  
	                android:id="@+id/stickTV"  
	                android:layout_width="wrap_content"  
	                android:layout_height="wrap_content"  
	                android:gravity="center"  
	                android:text="已置顶"  
	                android:textSize="15sp"/>
            </LinearLayout>
    </LinearLayout>
    <ImageView  
        android:id="@+id/smoothIV"  
        android:layout_width="50dp"  
        android:layout_height="2dp"  
        android:contentDescription="tab"  
        android:background="@drawable/title_common_background" >  
    </ImageView>  

    <android.support.v4.view.ViewPager android:id="@+id/managerViewPager"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_background">
    </android.support.v4.view.ViewPager>

</LinearLayout>
