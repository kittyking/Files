<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants" 
    android:paddingTop="20dp"
    android:paddingLeft="20dp">
    <com.school.schoolapp.view.RoundRectImageView android:layout_height="70dp"
                android:layout_width="70dp"
                android:id="@+id/goodsImg"/>
            <ImageView android:id="@+id/goodsImgBack"
                android:src="@drawable/icon_goods_img_background"
	            android:layout_height="70dp"
	            android:layout_width="70dp"/>
            <ImageView android:id="@+id/goodsout"
                android:src="@drawable/background_goods_out"
	            android:layout_height="70dp"
	            android:layout_width="70dp"
	            android:visibility="gone"/>
        <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:id="@+id/goodsName"
                android:textColor="@drawable/black_background"
                android:singleLine="true"
                android:layout_toRightOf="@+id/goodsImg"
                android:layout_marginLeft="10dp"/>
            <TextView android:id="@+id/goodsTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@drawable/red_textcolor"
                android:textSize="12sp"
                android:text="我的天啊"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@+id/goodsName"
                android:layout_below="@+id/goodsName"/>
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="￥5.0"
                android:textStyle="bold"
                android:id="@+id/shopPrice"
                android:textSize="16sp"
                android:textColor="@drawable/red_textcolor"
                android:layout_alignLeft="@+id/goodsName"
                android:layout_alignBottom="@+id/addBtn"
                android:layout_marginBottom="10dp"/>
            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="￥5.0"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="@drawable/dark_gray_color"
                android:id="@+id/marketPrice"
                android:layout_alignBottom="@+id/shopPrice"
                android:layout_toRightOf="@+id/shopPrice"/>
                <ImageButton android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_goods_cut"
                    android:id="@+id/cutBtn"
                    android:visibility="invisible"
	                android:layout_alignTop="@+id/addBtn"
	                android:layout_alignBottom="@+id/addBtn"
	                android:layout_toLeftOf="@+id/numberTV"/>
                <TextView android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:text="0"
	                android:gravity="center"
	                android:textSize="20sp"
	                android:id="@+id/numberTV"
	                android:textColor="@drawable/black_background"
	                android:alpha="0"
	                android:layout_alignTop="@+id/addBtn"
	                android:layout_alignBottom="@+id/addBtn"
	                android:layout_toLeftOf="@+id/addBtn"/>
                <ImageButton android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_goods_add"
                    android:background="@null"
                    android:id="@+id/addBtn"
                    android:layout_below="@+id/goodsTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"/>
                
                <TextView android:id="@+id/stock"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:alpha="0"
                    android:text="当前库存"
                	android:textSize="10sp"
                	android:layout_marginLeft="10dp"
                    android:textColor="@drawable/dark_gray_color"
                    android:layout_below="@+id/marketPrice"
                    android:layout_alignLeft="@+id/shopPrice"/>
           
        <!-- <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/timerTV"
                android:textColor="@drawable/red_textcolor"/>
            
            
        </LinearLayout> -->
        
    
    <LinearLayout android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:background="@drawable/title_common_background"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/addBtn"
        android:layout_marginTop="10dp"></LinearLayout>

</RelativeLayout>
