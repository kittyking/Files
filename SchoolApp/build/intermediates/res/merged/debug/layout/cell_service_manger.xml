<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_common_background" 
    android:paddingBottom="10dp">
    <TextView android:id="@+id/serviceTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:text="服务标题"
        android:background="@drawable/white_background"
        android:textSize="18sp"/>
    <TextView android:id="@+id/je"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="金额:"
        android:layout_below="@+id/serviceTitle"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/white_background"/>
    <TextView android:id="@+id/price"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="￥20.5元"
        android:textColor="@drawable/red_textcolor"
        android:layout_toRightOf="@+id/je"
        android:layout_alignTop="@+id/je"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/white_background"/>
    
    <LinearLayout android:layout_below="@+id/price"
        android:layout_height="44dp"
        android:layout_width="match_parent"
        android:background="@drawable/white_background"
        android:layout_marginTop="1dp">
        <Button android:id="@+id/updown"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="上架"
            android:textSize="16sp"
            android:textColor="@drawable/yellow_textcolor"
            android:background="@null"/>
        <Button android:id="@+id/edit"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="@drawable/actionbar_color"
            android:background="@null"/>
        
    </LinearLayout>
    

</RelativeLayout>
