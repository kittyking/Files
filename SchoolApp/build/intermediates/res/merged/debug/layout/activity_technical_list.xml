<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.technical.TechnicalListActivity" 
    android:orientation="vertical"
    android:background="@drawable/title_common_background">

    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/white_background">
        <ImageButton android:id="@+id/categoryarrow"
            android:layout_height="44dp"
            android:layout_width="44dp"
            android:src="@drawable/icon_arrow_down"
            android:background="@null"
            android:layout_alignParentRight="true"/>
        <GridLayout android:id="@+id/categoryGL"
            android:layout_height="44dp"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/categoryarrow"
            android:layout_marginLeft="@dimen/user_menu_arrow_margin_right">
            <Button android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="分类一"
                android:background="@null"
                android:textSize="13sp"/>
            <Button android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="分类一"
                android:background="@null"
                android:textSize="13sp"/>
            <Button android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="分类一"
                android:background="@null"
                android:textSize="13sp"/>
            <Button android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="分类一"
                android:background="@null"
                android:textSize="13sp"/>
        </GridLayout>
    </RelativeLayout>
    <LinearLayout android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/white_background"
        android:layout_below="@+id/adImage"
        android:layout_marginTop="1dp">
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView android:text="区域"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageView android:src="@drawable/icon_arrow_down"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView android:text="智能排序"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageView android:src="@drawable/icon_arrow_down"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView android:text="筛选"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageView android:src="@drawable/icon_arrow_down"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        
    </LinearLayout>
    
    <ListView android:id="@+id/techinallist"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_background" />

</LinearLayout>
