<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.workspace.MineWorkspaceSetupActivity"
    android:orientation="vertical"
    android:background="@drawable/title_common_background" >
    <RelativeLayout android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_background">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺头像"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
            android:paddingBottom="@dimen/mine_apply_info_margintopbottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="18sp"/>
         <ImageView android:layout_height="@dimen/user_menu_arrow_next_height"
                android:layout_width="@dimen/user_menu_arrow_next_height"
                android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
                android:layout_marginTop="18dp"
                android:src="@drawable/icon_arrow_next"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:id="@+id/photoIV"/>
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/mine_apply_info_margintopbottom"
            android:paddingBottom="@dimen/mine_apply_info_margintopbottom"
            android:background="@null"
            android:text="未上传"
            android:id="@+id/imgStatus"
            android:layout_toLeftOf="@+id/photoIV"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:id="@+id/imgBtn"/>
        
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/title_common_background"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_background">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名称"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
            android:paddingBottom="@dimen/mine_apply_info_margintopbottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="18sp"/>
        
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/mine_apply_info_margintopbottom"
            android:paddingBottom="@dimen/mine_apply_info_margintopbottom"
            android:background="@null"
            android:hint="请设置店铺名称"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/shopnameET"/>
        
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/title_common_background"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_background">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起送金额"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="@dimen/mine_apply_info_margintopbottom"
            android:paddingBottom="@dimen/mine_apply_info_margintopbottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textSize="18sp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:paddingTop="@dimen/mine_apply_info_margintopbottom"
            android:paddingBottom="@dimen/mine_apply_info_margintopbottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
            android:id="@+id/moneyTV"
            android:gravity="center"/>
        
        <EditText android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/mine_apply_info_margintopbottom"
            android:paddingBottom="@dimen/mine_apply_info_margintopbottom"
            android:background="@null"
            android:hint="请设置起送金额"
            android:layout_toLeftOf="@+id/moneyTV"
            android:id="@+id/moneyET"
            android:textColor="@drawable/red_textcolor"
            android:gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"/>
        
    </RelativeLayout>
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/white_background"
    android:layout_marginTop="10dp"
    android:id="@+id/addRelative1">
            <TextView android:text="店铺公告"
                android:id="@+id/noticeTextView1"
                android:layout_height="@dimen/user_menu_title_height"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"
                android:layout_width="wrap_content" 
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="18sp"/>
            <EditText android:id="@+id/noticeEditText1"
                android:hint="请输入店铺公告"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
                android:layout_alignParentRight="true"/>
            
            <LinearLayout android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="10dp"
            android:background="@drawable/title_common_background"
            android:layout_below="@+id/noticeTextView1"
            android:id="@+id/addLine1"></LinearLayout>

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/title_common_background"
                android:gravity="center_vertical"
                android:id="@+id/addLinear1">
                <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="添加"
                    android:layout_marginLeft="@dimen/user_menu_image_margin_left"
                    android:textColor="@drawable/actionbar_color"
                    android:background="@null"
                    android:id="@+id/addBtn1"
                    android:drawableLeft="@drawable/background_add_btn"/>
            </LinearLayout>
       </RelativeLayout>

    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/white_background"
    android:id="@+id/addRelative2"
    android:alpha="0"  >
            <TextView android:text="店铺公告"
                android:id="@+id/noticeTextView2"
                android:layout_height="@dimen/user_menu_title_height"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="18sp"/>
            <EditText android:id="@+id/noticeEditText2"
                android:hint="请输入店铺公告"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>
            
            <LinearLayout android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="10dp"
            android:background="@drawable/title_common_background"
            android:layout_below="@+id/noticeTextView2"
            android:id="@+id/addLine2"></LinearLayout>

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/title_common_background"
                android:gravity="center_vertical"
                android:id="@+id/addLinear2">
                 <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="添加"
                    android:layout_marginLeft="@dimen/user_menu_image_margin_left"
                    android:textColor="@drawable/actionbar_color"
                    android:background="@null"
                    android:id="@+id/addBtn2"
                    android:drawableLeft="@drawable/background_add_btn"/>
            </LinearLayout>
       </RelativeLayout>
    
    
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/white_background"
    android:id="@+id/addRelative3"
    android:alpha="0" >
            <TextView android:text="店铺公告"
                android:id="@+id/noticeTextView3"
                android:layout_height="@dimen/user_menu_title_height"
                android:layout_marginLeft="@dimen/user_menu_image_margin_left"
                android:layout_width="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="18sp"/>
            <EditText android:id="@+id/noticeEditText3"
                android:hint="请输入店铺公告"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_alignParentRight="true"/>
            
            <LinearLayout android:orientation="vertical"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/user_menu_image_margin_left"
            android:layout_marginRight="@dimen/user_menu_image_margin_left"
            android:layout_marginTop="10dp"
            android:background="@drawable/title_common_background"
            android:layout_below="@+id/noticeTextView3"
            android:id="@+id/addLine3"></LinearLayout>

            <LinearLayout android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/title_common_background"
                android:gravity="center_vertical"
                android:id="@+id/addLinear3">
                 <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="添加"
                    android:layout_marginLeft="@dimen/user_menu_image_margin_left"
                    android:textColor="@drawable/actionbar_color"
                    android:background="@null"
                    android:id="@+id/addBtn3"
                    android:drawableLeft="@drawable/background_add_btn"/>
            </LinearLayout>
       </RelativeLayout>
    

</LinearLayout>
