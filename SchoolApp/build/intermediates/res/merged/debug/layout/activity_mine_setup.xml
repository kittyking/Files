<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.activity.mine.MineSetupActivity" 
    android:background="@drawable/title_common_background">
    <LinearLayout android:id="@+id/info"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        android:layout_marginTop="10dp">
        <LinearLayout android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:orientation="vertical"
	        android:background="@drawable/title_common_background"
	        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"
	        android:layout_marginRight="@dimen/user_menu_arrow_margin_right">
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:onClick="informationSetup">
	            <TextView android:text="个人资料设置"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"/>
	            <ImageView android:layout_height="@dimen/user_menu_arrow_next_height"
	                android:layout_width="@dimen/user_menu_arrow_next_height"
	                android:layout_alignParentRight="true"
	                android:src="@drawable/icon_arrow_next"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="7dp"
	            android:paddingBottom="7dp"
	            android:layout_marginTop="1dp">
	            <TextView android:text="推送设置"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_centerVertical="true"/>
	            <ToggleButton android:id="@+id/mTogBtn"
	                android:layout_height="25dp"
	                android:layout_width="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
    				android:background="@android:color/transparent"
        			android:button="@drawable/checkbox_iphone"
    				android:text=""  
			        android:textOff=""  
			        android:textOn=""/>
	        </RelativeLayout>
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="7dp"
	            android:paddingBottom="7dp"
	            android:layout_marginTop="1dp">
	            <TextView android:text="定位"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_centerVertical="true"/>
	            <ToggleButton android:id="@+id/togLocation"
	                android:layout_height="25dp"
	                android:layout_width="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
    				android:background="@android:color/transparent"
        			android:button="@drawable/checkbox_iphone"
    				android:text=""  
			        android:textOff=""  
			        android:textOn=""/>
	        </RelativeLayout>
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:layout_marginTop="1dp">
	            <TextView android:text="关于我们"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"/>
	            <ImageView android:layout_height="@dimen/user_menu_arrow_next_height"
	                android:layout_width="@dimen/user_menu_arrow_next_height"
	                android:layout_alignParentRight="true"
	                android:src="@drawable/icon_arrow_next"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:layout_marginTop="1dp">
	            <TextView android:text="清除缓存"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"/>
	            <ImageView android:layout_height="@dimen/user_menu_arrow_next_height"
	                android:layout_width="@dimen/user_menu_arrow_next_height"
	                android:layout_alignParentRight="true"
	                android:src="@drawable/icon_arrow_next"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
	        <RelativeLayout android:layout_height="wrap_content"
	            android:layout_width="match_parent"
	            android:background="@drawable/white_background"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:layout_marginTop="1dp">
	            <TextView android:text="当前版本"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"/>
	            <TextView android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_alignParentRight="true"
	                android:text="V1.0"
	                android:textColor="@drawable/dark_gray_color"
	                android:layout_centerVertical="true"/>
	        </RelativeLayout>
            
        </LinearLayout>
        
    </LinearLayout>

    
    <Button android:id="@+id/logout"
        android:layout_below="@+id/info"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/user_menu_arrow_margin_right"
        android:layout_marginRight="@dimen/user_menu_arrow_margin_right"
        android:background="@drawable/red_textcolor"
        android:text="退出账号"
        android:textColor="@drawable/white_background"
        android:layout_marginTop="20dp"
        android:onClick="logout"/>

</RelativeLayout>
