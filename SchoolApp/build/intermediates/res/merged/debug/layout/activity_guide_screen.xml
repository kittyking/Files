<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.school.schoolapp.GuideScreenActivity" >

    <android.support.v4.view.ViewPager android:id="@+id/guide"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/red_textcolor"/>

    <Button android:id="@+id/enterBtn"
        android:layout_height="32dp"
        android:layout_width="120dp"
        android:text="立即购买"
        android:textColor="@drawable/white_background"
        android:background="@drawable/background_guide_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:onClick="enterPressed"
        android:alpha="0"/>
    
    <RadioGroup android:id="@+id/dotRG"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/dot1"
            android:layout_height="10dp"
            android:layout_width="10dp"
            android:background="@drawable/selector_dot"
            android:button="@null"
            android:checked="true"
            android:enabled="false"/>
        <RadioButton android:id="@+id/dot2"
            android:layout_height="10dp"
            android:layout_width="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_dot"
            android:button="@null"
            android:enabled="false"/>
        <RadioButton android:id="@+id/dot3"
            android:layout_height="10dp"
            android:layout_width="10dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/selector_dot"
            android:button="@null"
            android:enabled="false"/>
    </RadioGroup>
</RelativeLayout>
