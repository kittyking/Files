<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/white_background"
    android:paddingBottom="10dp" >
    <LinearLayout android:id="@+id/titleLL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">
        <ImageView android:background="@drawable/actionbar_color"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/icon_pay_haitongxue_small"/>
        
	    <TextView android:id="@+id/titleTV"
	        android:text="付款详情"
	        android:textSize="18sp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <ImageButton android:id="@+id/cancelBtn"
        android:layout_height="32dp"
        android:layout_width="32dp"
        android:background="@null"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_pay_cancel"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/title_common_background"
        android:layout_below="@+id/titleLL"></LinearLayout>
    <TextView android:id="@+id/infoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="便利店支付"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/titleLL"
        android:layout_marginTop="11dp"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"/>
    <TextView android:text="订单信息"
        android:textColor="@drawable/dark_gray_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLL"
        android:layout_alignTop="@+id/infoTV"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/title_common_background"
        android:layout_below="@+id/infoTV"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"></LinearLayout>
    <TextView android:id="@+id/userTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13666666666"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/infoTV"
        android:layout_marginTop="21dp"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"/>
    <TextView android:text="师兄盒子账号"
        android:textColor="@drawable/dark_gray_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoTV"
        android:layout_alignTop="@+id/userTV"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/title_common_background"
        android:layout_below="@+id/userTV"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"></LinearLayout>
    <TextView android:id="@+id/typeTV"
        android:text="付款方式"
        android:textColor="@drawable/dark_gray_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userTV"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"/>
    <RadioGroup android:id="@+id/typeRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="支付方式"
        android:orientation="horizontal"
        android:layout_below="@+id/typeTV"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
	        <RadioButton android:id="@+id/zfbRB"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
	            android:layout_centerVertical="true"
	            android:checked="true"
	            android:drawableRight="@drawable/icon_pay_zhifubao"
	            android:layout_weight="1"/>
            <RadioButton android:id="@+id/wxRB"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
	            android:layout_centerVertical="true"
                android:drawableRight="@drawable/icon_pay_weixin"
	            android:layout_weight="1"/>
            <RadioButton android:id="@+id/htxRB"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
	            android:layout_centerVertical="true"
                android:drawableRight="@drawable/icon_pay_haitongxue"
	            android:layout_weight="1"/>
            
    </RadioGroup>
    <LinearLayout android:orientation="horizontal"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/title_common_background"
        android:layout_below="@+id/typeRG"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"></LinearLayout>
    <TextView android:id="@+id/moneyTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1100元"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/typeRG"
        android:layout_marginTop="21dp"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"/>
    <TextView android:text="付款金额"
        android:textColor="@drawable/dark_gray_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeRG"
        android:layout_alignTop="@+id/moneyTV"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@drawable/title_common_background"
        android:layout_below="@+id/moneyTV"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"></LinearLayout>
    <Button android:id="@+id/payBtn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/background_submit_btn"
        android:layout_below="@+id/moneyTV"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="@dimen/mine_apply_info_marginleft"
        android:layout_marginRight="@dimen/mine_apply_info_marginright"
        android:text="确认付款"
        android:textSize="15sp"/>

</RelativeLayout>
